<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="store_search_view" model="ir.ui.view">
            <field name="name">store.search</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="contact"/>
                    <filter name="number of employees" string="Search by number of employees"
                            domain="[('number_of_employees', '=', 10)]"/>
                </search>
            </field>
        </record>
        <record id="store_tree_view" model="ir.ui.view">
            <field name="name">Store.tree</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <tree string="Store">
                    <field name="name"/>
                    <field name="contact"/>
                    <field name="telephone"/>
                </tree>
            </field>
        </record>
        <record id="store_form" model="ir.ui.view">
            <field name="name">Store.form</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <h2>Store Management :</h2>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="contact"/>
                                <field name="telephone"/>
                                <field name="sale_revenue"/>
                            </group>
                            <group>
                                <field name="image" widget="image" style="width: 75px; height: 75px;"/>
                            </group>
                            <notebook>
                                <page string="Other Information">
                                    <group>
                                        <field name="number_of_employees"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="store_model_view_kanban" model="ir.ui.view">
            <field name="name">store.view.kanban</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="contact"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.contact.value">
                                    <hr class="mt8 mb8"/>
                                    <field name="contact"/>
                                </t>
                                <div>
                                    <field name="image" widget="image" style="width: 75px; height: 75px;"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="store_map" model="ir.ui.view">
            <field name="name">store.view.map</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <map res_partner="contact" routing="true"
                     hide_name="true">
                    <field name="contact" string="Contact"/>
                </map>
            </field>
        </record>


        <record id="store_win" model="ir.actions.act_window">
            <field name="name">Store</field>
            <field name="res_model">store</field>
            <field name="view_mode">kanban,tree,form,map</field>
        </record>

        <menuitem id="Store_root" name="Store" web_icon="store_management,static/description/icon.png"
                  groups="base.group_user" sequence="1" action="store_win"/>
    </data>
</odoo>