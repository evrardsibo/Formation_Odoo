<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="member_list_view" model="ir.ui.view">
            <field name="name">member.tree</field>
            <field name="model">member</field>
            <field name="arch" type="xml">
                <tree string="Member">
                    <field name="sequence" widget="handle"/>
                    <field name="name_id"/>
                    <field name="email"/>
                    <field name="adress"/>
                    <field name="date_start"/>
                    <field name="is_member"/>
                </tree>
            </field>
        </record>

        <record id="member_form" model="ir.ui.view">
            <field name="name">member.form</field>
            <field name="model">member</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <h2>Member Management :</h2>
                        <group>
                            <group>
                                <field name="name_id"/>
                                <field name="email"/>
                                <field name="adress"/>
                                <field name="is_member"/>
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                                <field name="date_start"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="member_view_kanban" model="ir.ui.view">
            <field name="name">member.view.kanban</field>
            <field name="model">member</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="name_id"/>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.adress.value">
                                    <hr class="mt8 mb8"/>
                                    <field name="adress"/>
                                </t>
                                <div>
                                    <field name="image" widget="image" style="width: 75px; height: 75px;"/>
                                </div>
                                <t>
                                    <field name="date_start"/>
                                </t>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="member_win" model="ir.actions.act_window">
            <field name="name">Member</field>
            <field name="res_model">member</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="member_act" name="Members" parent="books_root"
                  groups="base.group_user" sequence="2" action="member_win"/>
    </data>
</odoo>