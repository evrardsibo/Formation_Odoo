<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="books_list_view" model="ir.ui.view">
            <field name="name">books.tree</field>
            <field name="model">books</field>
            <field name="arch" type="xml">
                <tree string="Books">
                    <field name="sequence" widget="handle"/>
                    <field name="title"/>
                    <field name="author"/>
                    <field name="year_of_manufacture"/>
                    <field name="copy_number"/>
                </tree>
            </field>
        </record>

        <record id="books_form" model="ir.ui.view">
            <field name="name">books.form</field>
            <field name="model">books</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <h2>Library Management :</h2>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="author"/>
                                <field name="year_of_manufacture"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="image" widget="image" style="width: 75px; height: 75px;"/>
                                <field name="isbn"/>
                                <field name="copy_number"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="books_view_kanban" model="ir.ui.view">
            <field name="name">books.view.kanban</field>
            <field name="model">books</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="title"/>
                    <field name="author"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="title"/>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.author.value">
                                    <hr class="mt8 mb8"/>
                                    <field name="author"/>
                                </t>
                                <div>
                                    <field name="image" widget="image" style="width: 75px; height: 75px;"/>
                                </div>
                                <t>
                                    <field name="year_of_manufacture"/>
                                </t>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="books_win" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">books</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="books_root" name="Books" web_icon="bibliothÃ¨que,static/description/icon.png"
                  groups="base.group_user" sequence="1" action="books_win"/>
    </data>
</odoo>