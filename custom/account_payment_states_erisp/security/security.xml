<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="account_check_payment" model="ir.module.category">
		<field name="name">Payment</field>
		<field name="parent_id" ref="base.module_category_accounting"/>
		 <field name="description">Helps you handle your accounting needs, if you are not an accountant, we suggest you to install only the Invoicing.</field>
		<field name="sequence">1000</field>

	</record>

	<record id="group_account_user_check" model="res.groups">
		<field name="name">User: Create &amp;Validate Document</field>
		<field name="category_id" ref="account_payment_states_erisp.account_check_payment"/>
		<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	</record>

	<record id="group_account_user_approve" model="res.groups">
		<field name="name">Manager: Approve Document</field>
		<field name="category_id" ref="account_payment_states_erisp.account_check_payment"/>
		<field name="implied_ids" eval="[(4, ref('account_payment_states_erisp.group_account_user_check'))]"/>
	</record>

</odoo>
