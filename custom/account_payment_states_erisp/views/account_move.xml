<odoo>
    <data>

        <record id="inherit_view_form_account_move" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='open_reconcile_view']" position="after">
                    <button name="action_open_moves" type="object" string="Journal Entries" class="oe_stat_button" icon="fa-bars" invisible="move_type == 'entry' or state != 'posted'"/>
                    <button name="action_open_payments" type="object" string="Payments" class="oe_stat_button" icon="fa-bars" invisible="move_type == 'entry' or state != 'posted'"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>