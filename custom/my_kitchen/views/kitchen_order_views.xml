<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kitchen_order_tree_view" model="ir.ui.view">   <!--id de la vue, créé par moi-->
            <field name="name">kitchen.order.view</field> <!--nom de la vue ? créé par moi-->
            <field name="model">kitchen.order</field> <!-- nom du model lié (doit encoder le titre correct)-->
            <field name="arch" type="xml">   <!-- obligatoire -->
                <tree string="Kitchen Order">
                    <field name="customer_name"/>  <!-- champ a afficher dans la vue-->
                    <field name="total_amount"/>  <!-- champ a afficher dans la vue-->
                    <field name="order_date"/>  <!-- champ a afficher dans la vue-->
                    <field name="status"/> <!-- champ a afficher dans la vue-->

                </tree>
            </field>
        </record>

        <record id="kitchen_order_form" model="ir.ui.view">
            <field name="name">kitchen.form</field>
            <field name="model">kitchen.order</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <group>
                            <field name="customer_name"/>  <!-- champ a afficher dans la vue-->
                            <field name="total_amount"/>  <!-- champ a afficher dans la vue-->
                            <field name="order_date"/>  <!-- champ a afficher dans la vue-->
                            <field name="status"/> <!-- champ a afficher dans la vue-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="open_my_kitchen_order">
            <field name="name">My Kitchen Order</field>
            <field name="res_model">kitchen.order</field> <!-- nom important -->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Kitchen Order" id="kitchen_order_menu" sequence="1" action="open_my_kitchen_order"
                  parent="kitchen_root"/>
        <!-- parent = id du menu parent "principal" , !!!! ne pas mettre de '.' dans l'id du menu item-->

    </data>
</odoo>