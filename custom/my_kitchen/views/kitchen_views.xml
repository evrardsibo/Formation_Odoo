<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="kitchen_tree_view" model="ir.ui.view">
            <field name="name">kitchen.tree</field>
            <field name="model">kitchen</field>
            <field name="arch" type="xml">
                <tree string="kitchen">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="start_date"/>
                    <field name="is_cooked"/>
                    <field name="description"/>
                    <field name="cook_number"/>
                    <field name="email"/>
                    <field name="age"/>
                    <field name="waiter"/>
                    <field name="total_employees"/>
                </tree>
            </field>
        </record>
        <record id="kitchen_form" model="ir.ui.view">
            <field name="name">kitchen.form</field>
            <field name="model">kitchen</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="start_date"/>
                            <field name="is_cooked"/>
                            <field name="description"/>
                            <field name="cook_number"/>
                            <field name="email"/>
                            <field name="age"/>
                            <field name="waiter"/>
                            <field name="total_employees"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kitchen_win" model="ir.actions.act_window">
            <field name="name">Kitchen</field>
            <field name="res_model">kitchen</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="kitchen_root" name="kitchen" web_icon="my_kitchen,static/description/icon.png"
                  groups="base.group_user" sequence="1" action="kitchen_win"/>


    </data>
</odoo>